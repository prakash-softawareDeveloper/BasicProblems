import java.util.*;
public class MyClass {
    public static void main(String args[]) {
     Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        int ans=0;
        int a[]=new int[n];
      for(int i=0;i<n;i++){
          a[i]=sc.nextInt();
      }
      Arrays.sort(a);
      for(int i=0;i<n;i++){
        if(i==a[i]){
            ans++;
        }
      }
      System.out.print(ans);
    }
}